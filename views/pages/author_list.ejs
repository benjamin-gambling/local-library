<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head %>

  <body>
    <div class="container-fluid">
      <div class="row">
        <% include ../partials/navbar %>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <br />
          <ul>
            <% if(author_list.length > 0) { author_list.forEach((author) => { %>
            <li>
              <a href="<%= author.url %>"><%= author.name %></a>
              (<%=author.lifespan %>)
            </li>
            <% })} else { %>
            <li>There are no Authors who match this search!</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>

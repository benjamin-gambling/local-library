<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head %>

  <body>
    <div class="container-fluid">
      <div class="row">
        <% include ../partials/navbar %>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <br />
          <ul>
            <% if(genre_list.length > 0) { genre_list.forEach((genre) => { %>
            <li>
              <a href="<%= genre.url %>"><%= genre.name %></a>
            </li>
            <% })} else { %>
            <li>There are no Generes which match this search!</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>

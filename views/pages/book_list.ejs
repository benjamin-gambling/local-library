<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head %>

  <body>
    <div class="container-fluid">
      <div class="row">
        <% include ../partials/navbar %>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <br />
          <ul>
            <% book_list.sort((a, b) => {let textA = a.title.toUpperCase(); let
            textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA
            > textB) ? 1 : 0;}) %> <% if(book_list.length > 0) {
            book_list.forEach((book) => { %>
            <li>
              <a href="<%= book.url %>"><%= book.title %></a>
              (<%=book.author.name%>)
            </li>
            <% })} else { %>
            <li>No books match this search!</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>

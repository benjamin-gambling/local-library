<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head %>

  <body>
    <div class="container-fluid">
      <div class="row">
        <% include ../partials/navbar %>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <br />
          <ul>
            <% if(bookinstance_list.length > 0) {
            bookinstance_list.forEach((version) => { %>
            <li>
              <a href="<%= version.url %>"
                ><%= version.book.title %> : <%= version.imprint %> -
              </a>
              <% if(version.status === 'Available'){ %>
              <span class="text-success"><%= version.status %></span>
              <% } else if(version.status === 'Maintenance'){ %>
              <span class="text-danger"><%= version.status %></span>
              <% } else { %>
              <span class="text-warning"><%= version.status %></span>
              <% } %> <% if(version.status !== 'Available'){ %>
              <span>Due: <%= version.due_back_formatted %></span>
              <% } %>
            </li>
            <% })} else { %>
            <li>There are no copies of this book in this library!</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head %>

  <body>
    <div class="container-fluid">
      <div class="row">
        <% include ../partials/navbar %>
        <div class="col-sm-10">
          <h1><%= title %></h1>

          <% if (genre_books.length) { %>
          <p>
            Delete/update the following books before attempting to delete this
            genre
          </p>
          <div style="margin-left: 20px; margin-top: 20px;">
            <h4>Books</h4>
            <dl>
              <% genre_books.forEach(book => { %>
              <dt>
                <a href="<%= book.url %>"><%= book.title %></a>
              </dt>
              <%}) %>
            </dl>
          </div>
          <% } else { %>
          <p>Do you really want to delete this Genre?</p>
          <form action="" method="POST">
            <div class="form-group">
              <input
                type="hidden"
                id="genreid"
                name="genreid"
                required="true"
                value="<%= genre._id %>"
                class="form-control"
              />
            </div>
            <button class="btn btn-primary" type="submit">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <% include ../partials/navbar %>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <br />
          <form action="" method="POST">
            <div class="form-group">
              <label for="name">Genre: </label>
              <input
                id="name"
                class="form-control"
                type="text"
                placeholder="Fantasy, Poetry etc."
                name="name"
                value="<%= locals.genre ?  genre.name : '' %>"
                required="true"
              />
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
            <br />
            <% if (locals.errors) { %>
            <ul>
              <% errors.forEach(err => { %>
              <li><%= err.msg %></li>
              <% }) %>
            </ul>
            <% } %>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
